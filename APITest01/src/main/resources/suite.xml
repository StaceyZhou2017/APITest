<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="taobao">
    <groups>
        <run>
            <include name="client"/>
        </run>
    </groups>


    <test name="login">
        <classes>
            <class name="com.apitest.testng.suite.SuiteConfig"/>
            <class name="com.apitest.testng.suite.LoginTest"/>
        </classes>
    </test>

    <test name="pay">
        <classes>
            <class name="com.apitest.testng.suite.SuiteConfig"/>
            <class name="com.apitest.testng.suite.PayTest"/>
        </classes>
    </test>

</suite>
